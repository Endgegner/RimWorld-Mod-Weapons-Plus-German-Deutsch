<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
		<defName>MeleeWeapon_Primitive_Knife</defName>
		<label>primitive knife</label>
    <techLevel>Neolithic</techLevel>
		<description>This "knife" is really just a small rock (or chunk of metal), held in the palm, and chipped to an edge on either side towards the rough point.</description>
		<graphicData>
			<texPath>Weapons_Melee/Knives/Primitive_Knife</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
    <weaponTags>
      <li>NeolithicMeleeBasic</li>
    </weaponTags>
    <costStuffCount>25</costStuffCount>
		<statBases>
			<WorkToMake>1200</WorkToMake>
			<Mass>0.45</Mass>
		</statBases>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<stuffCategories>
			<li>Metallic</li>
			<li>Stony</li>
		</stuffCategories>
    <tools>
      <li>
        <label>side</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>11</power>
        <cooldownTime>1.3</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
		<recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
	</ThingDef>
	
